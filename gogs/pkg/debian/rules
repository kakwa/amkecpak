#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

DEST=$$(pwd)/debian/gogs

%:
	dh $@

override_dh_auto_clean:

override_dh_auto_build:
	mkdir ./tmpgobuild
	unset GOROOT && \
	export TMPDIR=`pwd`/tmpgobuild && \
	export GOPATH=`pwd`/externals/ && \
	go build

override_dh_auto_install:
	mkdir -p  $(DEST)/usr/bin/
	cp gogs-* $(DEST)/usr/bin/gogs
	chmod 755 $(DEST)/usr/bin/gogs
	mkdir -p  $(DEST)/etc/gogs/
	mkdir -p  $(DEST)/var/lib/gogs/
	mkdir -p  $(DEST)/var/log/gogs/
	mkdir -p  $(DEST)/usr/share/gogs/
	cp -r templates $(DEST)/usr/share/gogs/
	cp -r public $(DEST)/usr/share/gogs/
	cp gogs.ini $(DEST)/etc/gogs/
