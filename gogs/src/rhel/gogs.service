[Unit]
Description=Gogs service
After=network.target
Wants=network.service

[Service]
Type=simple
#PIDFile=/var/run/gogs/gogs.pid
User=gogs
Group=gogs

EnvironmentFile=/etc/sysconfig/gogs
Environment=GOGS_CUSTOM=/usr/share/gogs/
ExecStart=/usr/bin/gogs web $OPTIONS
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
