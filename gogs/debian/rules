#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

DEST=$$(pwd)/debian/@NAME@

%:
	dh $@

override_dh_auto_clean:

override_dh_auto_build:
	mkdir -p ./tmpgobuild
	unset GOROOT && \
	export TMPDIR=`pwd`/tmpgobuild && \
	export GOPATH=`pwd`/externals/ && \
	export HOME=/tmp && \
	go build -o gogs
	rm -rf ./tmpgobuild

override_dh_auto_install:
	mkdir -p  $(DEST)/usr/bin/
	install -m 755 gogs $(DEST)/usr/bin/
	mkdir -p  $(DEST)/etc/gogs/
	mkdir -p  $(DEST)/var/lib/gogs/
	mkdir -p  $(DEST)/var/log/gogs/
	mkdir -p  $(DEST)/usr/share/gogs/
	cp -r templates $(DEST)/usr/share/gogs/
	cp -r public $(DEST)/usr/share/gogs/
	cp -r conf $(DEST)/usr/share/gogs/
	cp gogs.ini $(DEST)/etc/gogs/

override_dh_auto_test:
	true

override_dh_installinit:
	dh_installinit --no-start 

override_dh_clean:
	dh_clean
	rm -f gogs
	rm -rf ./tmpgobuild
