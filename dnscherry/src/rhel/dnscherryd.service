[Unit]
Description=LdapCherry Web UI
After=network.target
Wants=network.service

[Service]
Type=forking
PIDFile=/var/run/dnscherryd/dnscherryd.pid
User=dnscherry
Group=dnscherry

EnvironmentFile=/etc/sysconfig/dnscherryd
ExecStart=/usr/bin/dnscherryd $OPTIONS -p /var/run/dnscherryd/dnscherryd.pid
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
