[Unit]
Description=Samba Winbind Daemon
After=syslog.target network.target nmb.service

[Service]
Type=notify
NotifyAccess=all
PIDFile=/var/run/kakwa-samba/winbindd.pid
EnvironmentFile=-/etc/sysconfig/kakwa-samba
ExecStart=/opt/kakwa-samba/sbin/winbindd "$WINBINDOPTIONS"
ExecReload=/usr/bin/kill -HUP $MAINPID
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
